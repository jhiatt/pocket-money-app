<!DOCTYPE html>

<html>
  <head>
    <title>PocketMoneyApp</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#333">
    <meta name="description" content="Material Style Theme">
    <link rel="shortcut icon" href="/images/money-bag.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/css/preload.min.css" />
    <link rel="stylesheet" href="/css/plugins.min.css" />
    <link rel="stylesheet" href="/css/style.light-blue-500.min.css" />
    <link rel="stylesheet" href="/../assets/stylesheets/events.scss" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="body">
    <% flash.each do |name, message| %>
      <div class="alert alert-<%= name %> alert-dismissible alert-text" role="alert"><%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true" class="alert-text">&times;</span></button>
      </div> 
    <% end %>

     <nav class="navbar navbar-static-top yamm ms-navbar ms-navbar-dark">
        <div class="container container-full">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">
              <!-- <img src="assets/img/demo/logo-navbar.png" alt=""> -->
              <span class="ms-logo ms-logo-sm">
              <!-- <img src="money-bag.png" alt="PM"> -->
              <%= image_tag "money-bag.png", alt: "PM" %>
      <!--       PM -->
              </span>
              <span class="ms-title">Pocket
                <strong>Money</strong>
              </span>
            </a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

<!-- CONTENT -->
              <% if current_user %>
                <li class="dropdown">
                    <a href="/" class="dropdown-toggle animated fadeIn animation-delay-7" data-hover="dropdown" role="button" aria-haspopup="true" aria-expanded="false" data-name="blog">Pocket: <%= number_to_currency(current_user.account.pocket_money) %>
                    <!-- CONVERT THIS TO VUE.JS -->
<!--                   <i class="zmdi zmdi-chevron-down"></i>
 -->                </a>
                </li>
              <% end %> 
              <li class="dropdown">
                <a href="#" class="dropdown-toggle animated fadeIn animation-delay-7" data-toggle="dropdown" data-hover="dropdown" role="button" aria-haspopup="true" aria-expanded="false" data-name="blog">Calendar
                  <i class="zmdi zmdi-chevron-down"></i>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="/events">
                      <i class="zmdi zmdi-view-compact"></i>View Calendar</a>
                  </li>
                  <li>
                    <a href="/events/new">
                      <i class="zmdi zmdi-view-compact"></i>Add an Event</a>
                  </li>
                  
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle animated fadeIn animation-delay-7" data-toggle="dropdown" data-hover="dropdown" role="button" aria-haspopup="true" aria-expanded="false" data-name="blog">Tags
                  <i class="zmdi zmdi-chevron-down"></i>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="/tags">
                      <i class="zmdi zmdi-view-compact"></i>See all Tags</a>
                  </li>
                </ul>
              </li>
              <% if current_user %>
                <li class="dropdown">
                  <%= link_to "Sign Out", "/users/sign_out", class: "dropdown-toggle animated fadeIn animation-delay-7", role: "button", "aria-haspopup"=>"true", "aria-expanded"=>"false", "data-name"=> "blog", method: :delete %>
                  <!-- <a href="/users/sign_out" class="dropdown-toggle animated fadeIn animation-delay-7" data-hover="dropdown" role="button" aria-haspopup="true" aria-expanded="false" data-name="blog">Sign Out -->
<!--                   <i class="zmdi zmdi-chevron-down"></i>
-->                  </a>
              <% end %>


            <!-- <li class="btn-navbar-menu"><a href="javascript:void(0)" class="sb-toggle-left"><i class="zmdi zmdi-menu"></i></a></li> -->
            </ul>
          </div>
          <!-- navbar-collapse collapse -->
          <a href="javascript:void(0)" class="sb-toggle-left btn-navbar-menu">
            <i class="zmdi zmdi-menu"></i>
          </a>
        </div>
        <!-- container -->
      </nav>

    <%= yield %>

    <script src="/js/plugins.min.js"></script>
    <script src="/js/app.min.js"></script>
    <script src="/js/index.js"></script>
    <script src="/js/charts-bar.js"></script>
  </body>
</html>
