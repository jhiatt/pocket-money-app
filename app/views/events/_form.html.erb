                                                      <div>Wednesday<input type="checkbox" name="wednesday" value="true"></div>
                                                      <div>Thursday<input type="checkbox" name="thursday" value="true"></div>
                                                      <div>Friday<input type="checkbox" name="friday" value="true"></div>
                                                      <div>Saturday<input type="checkbox" name="saturday" value="true"></div>
                                                    </div>
                                                  <% end %>

                                                <div>How much?<input type="text" value="<%= @event.amount %>" name="amount"></div>

                                                <div>Provide a category if you want:
                                                 <select name="category" id="category"></div>
                                                  <% @categories.each do |category| %>
                                                    <option value="<%= category %>"><%= category %></option>
                                                  <% end %>
                                                  </select>
                                                </div>

                                                <div>Tag this expense as:
                                                 <% if @tags%>
                                                    <select name="tag" id="tag"></div>
                                                      <option value="none">None</option>
                                                      <% @tags.each do |tag| %>
                                                        <option value="<%= tag.id %>"><%= tag.description %></option>
                                                      <% end %>
                                                    </select>
                                                  <% else %>
                                                  No Tags   
                                                  <% end %>
