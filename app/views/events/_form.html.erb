<h1><%= heading %></h1>
<div id="app">

  <%= form_tag url, method: form_method do %>
  <!--   <div>Date: (Pleaase format Year, Month, Day)<input type="text" value="<%# @event %>" name="date" class="datepicker"></div>
   -->  <!-- see type "date" -->
    <div>Description:<input type="text" value="<%= @event.description %>" name="description"></div>

    <div>Is this money you will receive or money you owe?
      <select name="impact" id="impact"></div>
        <option value="out">Will Pay</option>
        <option value="in">Will Receive</option>
      </select>

    <div>Will this repeat?
    <select name="repeat" id="repeat"></div>
      <option value="True">Yes</option>
      <option value="False">No</option>
    </select>
    <% unless edit %>
      <div>Monthly or weekly?
      <select name="weekly" onchange="weeklyForm(this.value)"></div>
        <option value="false">Monthly</option>
        <option value="true">Weekly</option>
      </select>
      <!-- if monthly -->
        <div id="monthly" >
          monthly <div> <input type="date" name="date1"><div class="btn btn-primary" onclick="addDateForm(this)">Add additional date</div> </div>
          <div class="hidden">
            <input type="date" name="date2" >
            <div class="btn btn-primary" onclick="addDateForm(this)">Add additional date</div>
          </div>
          <div class="hidden"> <input type="date" name="date3" ><div class="btn btn-primary" onclick="addDateForm(this)">Add additional date</div> </div>
          <div class="hidden"> <input type="date" name="date4" ><div class="btn btn-primary" onclick="addDateForm(this)">Add additional date</div> </div>
          <div class="hidden"> <input type="date" name="date5" ></div>
        </div>
      <!-- if weekly -->
        <div id="weekly" class="hidden">weekly
          Starting: <input type="date" name="start_date" value=<%= Time.now %>>
          Sunday<input type="checkbox" name="sunday" value="true">
          Monday<input type="checkbox" name="monday" value="true">
          Tuesday<input type="checkbox" name="tuesday" value="true">
          Wednesday<input type="checkbox" name="wednesday" value="true">
          Thursday<input type="checkbox" name="thursday" value="true">
          Friday<input type="checkbox" name="friday" value="true">
          Saturday<input type="checkbox" name="saturday" value="true">
        </div>
      <% end %>

    <div>How much?<input type="text" value="<%= @event.amount %>" name="amount"></div>

    <div>Provide a category if you want:
     <select name="category" id="category"></div>
      <% @categories.each do |category| %>
        <option value="<%= category %>"><%= category %></option>
      <% end %>
      </select>
    </div>

    <div>Tag this expense as:
     <% if @tags%>
        <select name="tag" id="tag"></div>
          <option value="none">None</option>
          <% @tags.each do |tag| %>
            <option value="<%= tag.id %>"><%= tag.description %></option>
          <% end %>
        </select>
      <% else %>
      No Tags   
      <% end %>
<!--       <a href="/tags/new">New Tag</a>
 -->    </div>

    <div><input type="submit" value="<%= action %>"></div>
  <% end %>
</div>
