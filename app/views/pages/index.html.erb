<input id="currentUser" type="hidden" value="<%= current_user.account.id %>">
<div id="app">


<!-- Amount available -->
<div class="progress">
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="5000" aria-valuemin="0" aria-valuemax="6000" style="width: 80%">
      <span class="sr-only">60% Complete (success)</span>
  </div>
</div>

<div class="pocket-money, card">
    <div class="card-block">
      Pocket Money: {{ account.pocket_money }}
    </div>
</div>




<!-- Add an expense -->
  <div>Amount<input type="text" v-model="newExpAmount" name="amount"></div>
  <div>
  
  <div v-if="tags.length !== 0">Tag (optional):
    <select v-model="tagID"></div>
        <option v-for="tag in tags" value="<%= tag.id %>">{{tag.description}}</option>
    </select>
  </div>
  <div>
    <button v-on:click="newTag()">Create a New Tag</button>
    <div v-if="newTagForm">
      Tag Name:<input type="text" v-model=newTagDescription>
      <button v-on:click="addNewTag(newTagDescription)">Add</button>
    </div>
  </div>
  <div>Coming in or going out?
    <select v-model="newExpImpact"></div>
      <option value="In">Received</option>
      <option value="Out">Paid</option>
    </select>
  <div><button v-on:click="addExpense(newExpAmount, tagID, newExpImpact)">Submit</button>



  <div>Update your current Bank Balance<input type="text" v-model="lastBalance"></div>
  <div>How many days out do you want to go?
    <select v-model="pocketTime" value="account.pocket_time">
      <option value="30">30 days</option>
      <option value="60">60 days</option>
      <option value="90">90 days</option>
    </select>
  </div>
  <button v-on:click="updateAccount()">Update</button>

</div>

<div>
  <div class="card-header">
    <h3 class="card-title">
      <i class="zmdi zmdi-graduation-cap"></i>Spending History</h3>
  </div>
  <table class="table table-no-border table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Amount</th>
        <th>Tag</th>
      </tr>
    </thead>
    <tbody>
      <tr v-for="expense in expenses">
        <td>{{expense.date}} </td>
        <td>{{expense.amount}} </td>
        <td>{{expense.tag_description}} </td>
      </tr>
    </tbody>
  </table>
     
    
</div>

